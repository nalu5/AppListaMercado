<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaMercado.View.somarProdutos"
             BackgroundColor="#FFFFFF">
    
    <ContentPage.Content>

        <StackLayout>
            <Frame Padding="27" CornerRadius="0">
                <Label Text="Colocar produto na Minha Lista de Compras" HorizontalTextAlignment="Center" FontSize="29"/>
            </Frame>

            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Nome do produto:" HorizontalTextAlignment="Center"/>
                <Entry x:Name="Nome"/>

                <Label Text="Quantidade:" HorizontalTextAlignment="Center"/>
                <Entry x:Name="Qtd"/>

                <Label Text="Valor:" HorizontalTextAlignment="Center"/>
                <Entry x:Name="Valor"/>

                <Label Text="Valor Pago:" HorizontalTextAlignment="Center"/>
                <Entry x:Name="Valor_Pago"/>

            </StackLayout>

            <StackLayout VerticalOptions="EndAndExpand" />
            <Button Text="Adicionar Produto" TextColor="#ffffff" Clicked="Button_Clicked_Adicionar" BackgroundColor="#000000"/>


        </StackLayout>

    </ContentPage.Content>
</ContentPage>
